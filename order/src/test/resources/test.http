###
# Authentication via API Gateway, get access token and assign to `token` variable
###

POST http://localhost:8099/login
Content-Type: application/json

{
  "email": "frank.124@gmail.com",
  "password": "123"
}


> {%
    client.global.set("token", response.body.access_token);
%}

###
# Get all customers, then get the 1st customer in the list to place order
# Get his 1st shipping address and 1st credit card and assign to variables to be used in cart.http
###
GET http://localhost:8099/customers
Authorization: Bearer {{token}}

> {%
    client.global.set("creditCardId", response.body[0].creditCards[0].id);
    client.global.set("shippingAddressId", response.body[0].shippingAddress[0].id);
%}

###
# Get all products
###
GET http://localhost:8099/customers
Authorization: Bearer {{token}}

> {%
    client.global.set("productId", 101);
    client.global.set("productId2", 102);
%}

###
# Create a new cart
###
POST http://localhost:8099/carts
Authorization: Bearer {{token}}
userId: 1

> {%
    client.global.set("cartId", response.body.id);
%}

###
# Get the newly created cart
###
GET http://localhost:8099/carts/{{cartId}}
Authorization: Bearer {{token}}

###
# Add 1st product to cart -> 1st entry
###
POST http://localhost:8099/carts/{{cartId}}/entries?productId={{productId}}&quantity=1
Authorization: Bearer {{token}}

> {%
    client.global.set("entryId", response.body.lineItems[0].id);
%}

###
# Add 2nd product to cart -> 2nd entry
###
POST http://localhost:8099/carts/{{cartId}}/entries?productId={{productId2}}&quantity=1
Authorization: Bearer {{token}}

> {%
    client.global.set("entryId2", response.body.lineItems[0].id);
%}

###
# Update quantity of 1st entry
###
PUT http://localhost:8099/carts/{{cartId}}/entries?cartEntryId={{entryId}}&quantity=3
Authorization: Bearer {{token}}

###
# Delete 2nd entry
###
DELETE http://localhost:8099/carts/{{cartId}}/entries?cartEntryId={{entryId2}}
Authorization: Bearer {{token}}

###
# Select shipping address
###
POST http://localhost:8099/carts/{{cartId}}/shipping-address?shippingAddressId={{shippingAddressId}}
Authorization: Bearer {{token}}

###
# Update credit card
###
POST http://localhost:8099/carts/{{cartId}}/credit-card?creditCardId={{creditCardId}}
Authorization: Bearer {{token}}

###
# Place order
###
POST http://localhost:8099/carts/place-order?cartId={{cartId}}
Authorization: Bearer {{token}}
